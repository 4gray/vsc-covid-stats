{
    "name": "vsc-covid-stats",
    "displayName": "COVID-19 Statistics",
    "description": "Coronavirus tracker in VSCode sidebar",
    "version": "0.0.2",
    "publisher": "4gray",
    "engines": {
        "vscode": "^1.42.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "covid",
        "corona",
        "virus",
        "sidebar"
    ],
    "activationEvents": [
        "onView:covid-stats",
        "onView:worldwide-stats",
        "onView:countries-stats"
    ],
    "homepage": "https://4gray.github.io/vsc-covid-stats",
    "galleryBanner": {
        "color": "#b52e31",
        "theme": "dark"
    },
    "icon": "media/dep.png",
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "covid-stats",
                    "title": "Covid-19 Stats",
                    "icon": "media/dep.svg"
                }
            ]
        },
        "views": {
            "covid-stats": [
                {
                    "id": "worldwide-stats",
                    "name": "Worldwide"
                },
                {
                    "id": "pinned-stats",
                    "name": "Pinned Countries"
                },
                {
                    "id": "countries-stats",
                    "name": "Countries"
                }
            ]
        },
        "commands": [
            {
                "command": "countries-stats.refreshEntry",
                "title": "Refresh",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "pinned-stats.refreshEntry",
                "title": "Refresh",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "worldwide-stats.refreshEntry",
                "title": "Refresh",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "covid.pin-country",
                "title": "Pin/unpin country",
                "icon": {
                    "light": "resources/light/pin.svg",
                    "dark": "resources/dark/pin.svg"
                }
            },
            {
                "command": "covid.unpin-country",
                "title": "Unpin country",
                "icon": {
                    "light": "resources/light/remove.svg",
                    "dark": "resources/dark/remove.svg"
                }
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "countries-stats.refreshEntry",
                    "when": "view == countries-stats",
                    "group": "navigation"
                },
                {
                    "command": "pinned-stats.refreshEntry",
                    "when": "view == pinned-stats",
                    "group": "navigation"
                },
                {
                    "command": "worldwide-stats.refreshEntry",
                    "when": "view == worldwide-stats",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "covid.pin-country",
                    "when": "viewItem == pin",
                    "group": "inline"
                },
                {
                    "command": "covid.unpin-country",
                    "when": "viewItem == unpin",
                    "group": "inline"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "Covid-19 Stats Configuration",
            "properties": {
                "vsc-covid-stats.pinned-countries": {
                    "type": "array",
                    "default": [
                        "china",
                        "italy",
                        "spain",
                        "germany",
                        "russia",
                        "usa"
                    ],
                    "description": "Pinned countries"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "package": "vsce package"
    },
    "devDependencies": {
        "@types/node": "^10.12.21",
        "@types/vscode": "^1.42.0",
        "typescript": "^3.5.1",
        "tslint": "^5.12.1"
    },
    "dependencies": {
        "axios": "^0.19.2"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/4gray/vsc-covid-stats"
    }
}
